{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "Separate PRs for main cluster",
      "matchFileNames": [
        "**/kubernetes/fran/**",
        "**/ansible/fran/**",
        "**/terraform/fran/**"
      ],
      "additionalBranchPrefix": "fran-"
    },
    {
      "description": "Separate PRs for nell cluster",
      "matchFileNames": [
        "**/kubernetes/nell/**",
        "**/ansible/nell/**",
        "**/terraform/nell/**"
      ],
      "additionalBranchPrefix": "nell-"
    }
  ]
}
