{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "Separate PRs for fenrys cluster",
      "matchFileNames": ["**/kubernetes/fenrys/**"],
      "additionalBranchPrefix": "fenrys-"
    },
    {
      "description": "Separate PRs for storage cluster",
      "matchFileNames": ["**/kubernetes/fran/**"],
      "additionalBranchPrefix": "fran-"
    },
    {
      "description": "Separate PRs for raspi cluster",
      "matchFileNames": ["**/kubernetes/raspi/**"],
      "additionalBranchPrefix": "raspi-"
    }
  ]
}
