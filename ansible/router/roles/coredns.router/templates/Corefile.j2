(common) {
  bind 10.0.0.1 10.20.30.1 10.10.10.1 10.42.42.1 127.0.0.1 ::1
  errors
  log
  reload
  loadbalance
  cache 300
  loop
  local
  hosts /var/etc/dnsmasq-hosts {
    ttl 600
    reload 5s
    fallthrough
  }
  prometheus 10.0.0.1:9153
}

. {
  import common
  k8s_gateway {{ SECRET_PUBLIC_DOMAIN }} {
    resources Ingress
    ttl 1
    kubeconfig /usr/local/etc/coredns/kubeconfig
    fallthrough
  }
  forward . tls://1.1.1.1 tls://1.0.0.1 {
    tls_servername cloudflare-dns.com
  }
}

{{ SECRET_PRIVATE_DOMAIN }} {
  import common
  k8s_gateway . {
    resources Ingress
    ttl 30
    kubeconfig /usr/local/etc/coredns/kubeconfig
  }
}
